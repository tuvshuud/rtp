html(lang='en')
head
    meta(charset='utf-8')
    //
       Le styles 
    link(href='/public/css/bootstrap.css', rel='stylesheet')
    style(type='text/css')
      body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #f5f5f5;
      }
      .form-signin {
      max-width: 300px;
      padding: 19px 29px 29px;
      margin: 0 auto 20px;
      background-color: #fff;
      border: 1px solid #e5e5e5;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
      -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
      box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
      margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
      font-size: 16px;
      height: auto;
      margin-bottom: 15px;
      padding: 7px 9px;
      }
    link(href='/public/css/bootstrap-responsive.css', rel='stylesheet')
  body
    .container
      form.form-signin(action='/auth', method='post')
        h2.form-signin-heading Өөрийн эрхээр нэвтэрнэ үү
        input.input-block-level(type='text', name='user', placeholder='Нэвтрэх нэр')
        input.input-block-level(type='password', name='pwd', placeholder='Нууц үг')
        input(type='hidden', name='type', value='#{type}')
        label.checkbox
          input(type='checkbox', value='remember-me')
          | Remember me
        p #{status}
        button.btn.btn-large.btn-primary(type='submit') Нэвтрэх
    //
       /container 
